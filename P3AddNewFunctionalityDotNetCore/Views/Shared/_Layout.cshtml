<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <title>@ViewData["Title"] - P3AddNewFunctionalityDotNetCore</title>
</head>
<body>
    <div class="bg-primary py-2">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col">
                    <a class="btn btn-warning" asp-action="Admin" asp-controller="Product">
                        @Localizer["Administrator"]
                    </a>
                </div>
                <div class="col-7">
                    <a class="navbar-brand text-white fs-4" asp-action="Index" asp-controller="Product">
                        OpenClassrooms shop
                    </a>
                </div>          
                <div class="col">
                    @await Component.InvokeAsync("CartSummary")
                </div>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-8"><p>&copy; 2022 - P3AddNewFunctionalityDotNetCore</p></div>
                <div class="col-4">
                    @await Component.InvokeAsync("LanguageSelector")
                </div>
            </div>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
